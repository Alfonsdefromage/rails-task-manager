<div class="container">
    <h2 class="ms-3">Your Tasks</h2>

    <ul class="list-unstyled ms-3">
      <%@tasks.each do |task| %>
      <li>
        <%= check_box_tag "completed", "1",task.completed %>
        <%= link_to task.title, task_path(task)%>
        <%="â€¢"%>
        <%= link_to task_path(task), data:  { turbo_method: :delete, turbo_confirm: "Delete #{task.title}?" } do %>
        <i class="fa-solid fa-trash-can" style="color: #ff1700;"></i>
        <%end%>
        </li>
      <% end %>
    </ul>

    <div class="d-flex justify-content-start align-items-start m-3 border-top border-2">
      <%= link_to new_tasks_path do %>
      <i class="fa-solid fa-plus" style="color: #74C0FC;"> Add a new task</i>
      <%end%>
    </div>

  </div>
</div>
